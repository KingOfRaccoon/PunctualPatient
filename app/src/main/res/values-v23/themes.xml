    <style name="ExpandableList_style">
        <item name="android:background">@color/wwwhite</item>
        <item name="android:textColor">@color/tx_grey</item>
    </style>
    <style name="ButtonNavigationStyle">
        <item name="itemIconTint">@color/selector</item>
        <item name="android:itemBackground">@color/wwwhite</item>
        <item name="itemTextColor">@color/selector</item>
        <item name="android:backgroundTint">@color/wwwhite</item>
    </style>
    <style name="CalendarStyle">
        <item name="todayItem_textColor">@color/purple_100</item>
        <item name="android:textColor">@color/purple_100</item>
        <item name="android:colorPrimary">@color/light_grey</item>
        <item name="expandIconColor">@color/purple_100</item>
        <item name="todayItem_background">@drawable/circle_black_stroke_background</item>

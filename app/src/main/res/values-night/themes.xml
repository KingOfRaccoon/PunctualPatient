<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PunctualPatient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E5D4CE</item>
        <item name="colorPrimaryVariant">#E5D4CE</item>
        <item name="colorOnPrimary">@color/tx_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tx_grey</item>
        <!-- Customize your theme here. -->
        <item name="primaryColor">@color/purple_700</item>
        <item name="textColor">#E5D4CE</item>
        <item name="selectedItem_textColor">#3066BE</item>
        <item name="todayItem_textColor">#8DB580</item>
        <item name="buttonLeft_drawableTintColor">#AE8E1C</item>
        <item name="buttonRight_drawableTintColor">#823200</item>
        <item name="expandIconColor">#650D1B</item>
    </style>

    <style name="ExpandableList_style">
        <item name="android:background">@color/tx_grey</item>
        <item name="android:textColor">@color/wwwhite</item>
    </style>
    <style name="Talon_style">
        <item name="android:background">#7A7A7A</item>
        <item name="android:textColor">@color/wwwhite</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="ButtonNavigationStyle">
        <item name="itemIconTint">@color/selector</item>
        <item name="android:itemBackground">#A8A8A8</item>
        <item name="android:backgroundTint">#A8A8A8</item>
        <item name="itemTextColor">@color/selector</item>
    </style>

    <style name="CalendarStyle">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="todayItem_textColor">@color/purple_200</item>
        <item name="todayItem_background">@drawable/circle_white_stroke_background</item>
        <item name="selectableItemBackground">@drawable/circle_white_solid_background</item>
        <item name="expandIconColor">@color/purple_200</item>
        <item name="selectedItem_textColor">@color/purple_100</item>
    </style>
</resources>